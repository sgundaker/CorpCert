@{
    ViewBag.Title = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
    L2Test.Models.TechModels TechList = new L2Test.Models.TechModels();
    L2Test.Models.UserMgmt UserList = new L2Test.Models.UserMgmt();
}

